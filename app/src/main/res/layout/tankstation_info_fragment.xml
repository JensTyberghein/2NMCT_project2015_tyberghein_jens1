<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#BCD2EE" android:id="@+id/tankstationInfoFragment">


    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Station Delcour"
        android:id="@+id/txtInfoNaam"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textColor="#0C217D"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toon op map"
        android:id="@+id/btnToonOpMap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        style="@style/ButtonStyle"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgTankstation"
        android:src="@drawable/test"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/txtInfoNaam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:padding="2dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Adres: "
        android:id="@+id/textView"
        android:layout_below="@+id/imgTankstation"
        android:layout_alignStart="@+id/txtInfoNaam"
        android:textColor="#0C217D"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Moeskroenstraat 397/A"
        android:id="@+id/txtInfoAdres"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginTop="1dp"
        android:textColor="#0C217D"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stad: "
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="5dp"
        android:textColor="#0C217D"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8930 Menen"
        android:id="@+id/txtInfoStad"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:textColor="#0C217D"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="tel: "
        android:id="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:layout_toStartOf="@+id/txtInfoStad"
        android:layout_marginTop="2dp"
        android:textColor="#0C217D"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="056 42 44 02"
        android:id="@+id/txtTelefoon"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginTop="1dp"
        android:textColor="#0C217D"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnBellen"
        android:background="@drawable/iconbellen"
        android:layout_alignBottom="@+id/txtInfoNaam"
        android:layout_alignEnd="@+id/imgTankstation"
        style="@style/ButtonStyle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Afstand:"
        android:id="@+id/textView4"
        android:layout_below="@+id/txtTelefoon"
        android:layout_alignParentStart="true"
        android:textColor="#0C217D"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="10"
        android:id="@+id/txtAfstand"
        android:layout_below="@+id/txtTelefoon"
        android:layout_toEndOf="@+id/textView4"
        android:paddingLeft="4dp"
        android:textColor="#0C217D"/>


</RelativeLayout>